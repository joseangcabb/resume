---
import type ListProps from '@/types/props/list';
const { items, titleKey, descKey } = Astro.props as ListProps;
---

<ul class="list-[square] pl-5">
  {items.map((item, index) => {
    if (typeof item === 'string') {
      return <li key={index}>{item}</li>;
    } else {
      return (
        <li class="mb-2" key={index}>
          {titleKey && <strong>{item[titleKey]}</strong>}
          {descKey && <p>{item[descKey]}</p>}
        </li>
      );
    }
  })}
</ul>
